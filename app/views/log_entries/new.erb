<center>
  <h1>Add a New Entry</h1>

  <form action="/log_entries" method="POST">
    <label> Select Logbook </label>
    <select name="logbook_id" id="logbook_id">
      <%current_user.logbooks.each do |logbook|%>
        <option value="<%=logbook.id%>"><%=logbook.name%></option>
      <%end%>
    </select></br>

    <label> Date </label>
    <input type="date" name="date"> </br>

    <label> Pilot in Command </label>
    <input type="text" name="pilot_in_command"> </br>

    <label> Aircraft Type </label>
    <input type="text" name="aircraft_type"> </br>

    <label> Aircraft Registration </label>
    <input type="text" name="aircraft_rego"> </br>

    <label> Origin </label>
    <input type="text" name="origin"> </br>

    <label> Destination </label>
    <input type="text" name="destination"> </br>

    <label> Number of Landings </label>
    <input type="text" name="landings"> </br>

    <label> Remarks </label>
    <textarea type="text" name="destination" rows="6"></textarea> </br>

    <input type="submit" value="Create">
  </form>
</center>